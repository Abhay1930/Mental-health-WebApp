{
  "name": "mindtrack",
  "version": "1.0.0",
  "description": "Full-stack Mental Health Wellness Web App",
  "scripts": {
    "install:all": "npm install && cd frontend && npm install && cd ../ml-model && pip install -r requirements.txt",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:frontend": "cd frontend && npm run build",
    "train:model": "cd ml-model && python train_model.py",
    "predict": "cd ml-model && python predict.py"
  },
  "dependencies": {
    "concurrently": "^8.2.0"
  }
}
